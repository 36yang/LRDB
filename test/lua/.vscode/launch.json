{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lua",
            "request": "launch",
            "name": "Lua-Debug",
            "host": "localhost",
            "port": 21110,
            "sourceRoot": "${workspaceRoot}",
            "startupCommand": {
                "program": "${command.DefaultLuaInterpreter}",
                "args": [
                    "--port",
                    "21110",
                    "${command.CurrentSource}"
                ],
                "cwd": "${workspaceRoot}"
            },
            "stopOnEntry": true
        },
        {
            "type": "lua",
            "request": "launch",
            "name": "Lua attach",
            "host": "localhost",
            "port": 21110,
            "sourceRoot": "${workspaceRoot}",
            "stopOnEntry": true
            ,"debugServer":4711
        },
        {
            "type": "lua",
            "request": "launch",
            "name": "debugserver Debug",
            "host": "localhost",
            "port": 21110,
            "sourceRoot": "${workspaceRoot}",
            "startupCommand": {
                "program": "${command.DefaultLuaInterpreter}",
                "args": [
                    "--port",
                    "21110",
                    "${command.CurrentSource}"
                ],
                "cwd": "${workspaceRoot}"
            },
            "stopOnEntry": false
            ,"debugServer":4711
        }
    ]
}